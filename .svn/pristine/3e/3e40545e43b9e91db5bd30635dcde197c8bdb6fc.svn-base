<%@ page language="java" contentType="text/html; charset=UTF-8"
    pageEncoding="UTF-8"%>
<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>글쓰기 페이지</title>
		<link rel="stylesheet" href="css/write_view.css">
	</head>
	<body>
		<!-- header 추가 -->
		<div>
			<%@ include file="../header.jsp" %>
		</div>
		<div id="board_outline">
			<div id="title_area">
				<h1>글쓰기</h1>
			</div>
			<hr>
			<div id="contents_area">
				<form action="">
					<table>
						<colgroup>
							<col width="15%">
							<col width="85%">
						</colgroup>
						<tbody>
							<tr>
								<th>작성자</th>
								<td>
									<input type="text">
									<!-- placeholder="로그인 session의 ID 출력 + input 삭제" -->
								</td>
							</tr>
							<tr>
								<th>제목</th>
								<td>
									<input type="text">
								</td>
							</tr>
							<tr>
								<th>내용</th>
								<td>
									<textarea rows="10" cols="50"></textarea>
									 <!-- placeholder="api 추가" -->
								</td>
							</tr>
							<tr>
								<th>이미지표시</th>
								<td>
									<input type="file" class="file">
								</td>
							</tr>
						</tbody>
					
					</table>
					<hr>
					<div id="btn_area">
						<input type="button" value="취소" class="cancel_btn">&nbsp;
						<input type="button" value="확인" class="confirm_btn">
					</div>
				</form>
			</div>
		</div>
		<!-- footer 추가 -->
		<div>
			<%@ include file="../footer.jsp" %>
		</div>		
		
	</body>
</html>