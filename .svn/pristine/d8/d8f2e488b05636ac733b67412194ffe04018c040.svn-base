@Controller
public class AjaxController {
	
	@Autowired
	AjaxService ajaxService;
	
	
	//변수선언
	Map<String, Object> map = new HashMap<String, Object>();
	
	
	//리스트 View - 최초 진입시
	@RequestMapping("/ajax/list")
	public String ajaxMain(@Nullable String page, Model model) {
		
		//page = "1";  //최초 진입 시 page는 null이므로 1로 설정함
		map = ajaxService.ajaxListAll(page);
		map.put("page", page);
		model.addAttribute("map", map);
		
		return "/ajax/list";
	}
	
	
	//페이징 기능
	@RequestMapping("/ajax/movePg")
	@ResponseBody
	public Map<String, Object> ajaxNextPg(String page, Model model) {
		
		map = ajaxService.ajaxListAll(page);
		map.put("page", page);
		model.addAttribute("map", map);
		
		return map;
	}
	
	

	
	//쓰기 - View
	@RequestMapping("/ajax/write")
	public String ajaxWrite(Model model) {
		
		AjaxDto ajaxDto = null;
		map.put("ajaxDto", ajaxDto);
		map.put("formAction", "/ajax/doWrite");
		model.addAttribute("map", map);
		
		return "/ajax/write";
	}
	
	
	//쓰기 - DB 저장하기
	@RequestMapping("/ajax/doWrite")
	@ResponseBody
	public Map<String, Object> doWrite(String user_id, String title_ajax, String contents_ajax) {
		
		map = ajaxService.ajaxDoWrite(user_id, title_ajax, contents_ajax);
		return map;
	}
	
	
