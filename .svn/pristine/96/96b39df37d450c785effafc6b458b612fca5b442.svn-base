@charset "UTF-8";
*{
	margin: 0;
	padding: 0;
}
#board_outline{
	width: 1300px;
	margin: 0 auto;
	/* border: 1px solid black; */
}
#title_area{
	width: 1300px;
	margin: 0 auto;
	padding-bottom: 40px;
	box-sizing: border-box;
	/* border: 1px solid black; */
}
#title_area h1{
	margin-top: 60px;
	text-align: center;
}
#nickName_area{
	width: 570px;
	margin: 0 auto;
	box-sizing: border-box;
	padding-bottom: 20px;
	/* border: 1px solid green; */
}
#nickName{
	width: 400px;
	height: 30px;
}
input[id='nickName']:focus{
	outline: 2px solid #5EC75E;
	font-size: 18px;
	font-weight: 600;
}
input:focus::-webkit-input-placeholder {
	color:transparent; 
}
#nickNameBtn{
	width: 60px;
	height: 30px;
	font-size: 15px;
	font-weight: 600;
}
#chatRoom{
	width: 800px;
	margin: 0 auto;
	padding: 50px 0;
	margin-bottom: 100px;
	border: 3px solid gray;
}
#chat_history{
	width: 750px;
	height: 500px;
	margin: 0 auto;
	background-color: #b4b4b4;
	opacity: 0.3;
	/* border: 2px solid red; */
}
#message_area{
	width: 750px;
	margin: 0 auto;
	box-sizing: border-box;
	padding-top: 20px;
	/* border: 1px solid black; */
}
#message{
	width: 685px;
	height: 30px;
	font-size: 15px;
	font-weight: 600;
}
#sendBtn{
	width: 50px;
	height: 30px;
	font-size: 15px;
	font-weight: 600;
}