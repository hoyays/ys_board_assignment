@charset "UTF-8";
*{
	margin: 0;
	padding: 0;
}
#board_outline{
	width: 1300px;
	height: 650px;
	margin: 0 auto;
	/* border: 1px solid red; */
}
#title_area{
	width: 1300px;
	height: 100px;
	margin: 0 auto;
	/* border: 1px solid black; */
}
#title_area h1{
	margin-top: 80px;
	text-align: center;
}
hr{
	border: 3px solid black;
	margin-bottom: 30px;
}
#contents_area{
	width: 1300px;
	height: 500px;
	margin: 0 auto;
	/* border: 1px solid blue; */
}
table{
	width: 90%;
	margin: 0 auto;
	/* border: 1px solid black; */
}
/* table, th, td{
	border: 1px solid black;
	border-collapse: collapse;
} */
th{
	height: 70px;
	font-weight: normal;
	font-size: 20px;
}
input{
	width: 100%;
	height: 40px;
	font-size: 16px;
	border: 2px solid #ccc;
}
textarea{
	resize: none;
	width: 100%;
	border: 2px solid #ccc;
}
input[class="file"]{
	border: none;
	height: 30px;
	display: inline;
	vertical-align: middle;
}
#btn_area{
	width: 315px;
	height: 40px;
	margin: 0 auto;
	margin-top: 10px;
	/* border: 1px solid blue; */
}
#btn_area input{
	width: 150px;
	color: #fff;
	cursor: pointer;
	font-size: 14px;
	  
}
.cancel_btn{
	background-color: #333;
	border-color: #333;
}
.confirm_btn{
	background-color: #5EC75E;
	border-color: #5EC75E;
}