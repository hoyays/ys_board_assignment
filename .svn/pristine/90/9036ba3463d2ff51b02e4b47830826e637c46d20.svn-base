@charset "UTF-8";
*{
	margin: 0;
	padding: 0;
}
#board_outline{
	width: 1300px;
	height: 1400px;
	margin: 0 auto;
	/* border: 1px solid red; */
}
#title_area{
	width: 1300px;
	height: 130px;
	margin: 0 auto;
	/* border: 1px solid black; */
}
#title_area h1{
	margin-top: 80px;
	text-align: center;
}
#contents_area{
	width: 1300px;
	height: 600px;
	margin: 0 auto;
	/* border: 1px solid red; */
}
table, th, td{
	border-collapse: collapse;
}
table{
	width: 100%;
	margin: 0 auto;
	border: 1px solid black;
}
th{
	padding: 10px 0 10px 20px;
	border: 1px solid silver;
	border-top: 2px solid black;
	font-weight: bold;
}
td{
	padding: 5px 0 5px 20px;
	border: 1px solid silver;
}
th, td{
	height: 40px;
	text-align: left;
	border-left: hidden;
	border-right: hidden;
	font-size: 18px;
}
.article{
	padding: 20px 0 20px 20px;
}
.seperator{
	padding: 0 20px 0 20px;
	color: #e0e0e0;
}
.list_btn{
	float: right;
	width: 120px;
	height: 50px;
	line-height: 50px;
	text-align: center;
	margin: 30px 15px 10px 0;
	border: 2px solid black;
}
#deleteBtn{
	cursor: pointer;
}
#deleteBtn:hover{
	color: #5EC75E;
}
#reply_area{
	width: 1300px;
	height: 500px;
	margin: 0 auto;
	padding-top: 40px;
	/* border: 1px solid blue; */
}
#reply_history{
	width: 1300px;
	margin: 0 auto;
	padding: 15px;
	box-sizing: border-box;
	border: 2px solid grey;
}
#reply_history input[type="button"]{
	width: 50px;
	height: 30px;
	font-weight: 800;
	font-size: 15px;
}
#replyBlock{
	background-color: #dcdcdc;
}
#replyDetail{
	width: 1250px;
	margin-top: 20px;	
	padding: 50px;
	box-sizing: border-box;
	border: 1px solid black;
}
#reply_pageNum_area{
	width: 300px;
	height: 50px;
	margin: 0 auto;
	margin-top: 15px;
	text-align: center;
	/* border: 1px solid black; */
}
#reply_pageNum_area ul{
	list-style: none;
}
#reply_pageNum_area .page_num li{
	width: 38px;
	height: 36px;
	padding-top: 5px;
	box-sizing: border-box;
	float: left;
	margin-left: 20px;
	border: 1px solid grey;
}
.first{
	background: url("../../img/paging_first.png") no-repeat;
}
.prev{
	background: url("../../img/paging_prev.png") no-repeat;
}
.next{
	background: url("../../img/paging_next.png") no-repeat;
}
.last{
	background: url("../../img/paging_last.png") no-repeat;
}
#reply_write{
	width: 1300px;
	height: 175px;
	margin: 0 auto;
	margin-top: 50px;
	padding: 15px;
	box-sizing: border-box;
	border: 2px solid red;
}
#reply_write input[type="text"]{
	width: 1150px;
	height: 100px;
	margin: 0 auto;
}
#reply_write input[type="checkbox"]{
	width: 18px;
	height: 18px;
}
#reply_write input[type="button"]{
	width: 100px;
	height: 105px;
	text-align: center;
	font-weight: 800;
	font-size: 18px;
}

